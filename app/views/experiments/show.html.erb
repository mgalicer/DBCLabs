<div class="container">

  <% if current_user %>
  <div id="all-links">
    <ul>
      <li><%= link_to "All Proposals", proposals_path %></li>
      <li><%= link_to "All Experiments", root_path %></li>
    </ul>
  </div>
  <% end %>

  <h3>Experiment Overview:</h3>

<label>Title:</label>
<p><%= @experiment.title %></p>

<label>Materials:</label>
<p><%= @experiment.materials %></p>
<label>Observations:</label>
<p><%= @experiment.observations %></p>
<label>Results:</label>
<p><%= @experiment.results %></p>
<label>Conclusion:</label>
<p><%= @experiment.conclusion %></p>
<label>Results:</label>
<p><%= @experiment.results %></p>

  <div class="experiment-footer">
    <label>This is based off of the following Proposal:</label>
    <p><%= @experiment.proposal.title %></p>
    <label>Experiment Lead:</label>
    <p><%= @experiment.experimenter.name %></p>
    <label>Experiment Status:</label>
    <p><%= @experiment.created_at %></p>
  </div>
</div>
<div class=></div>
<div class="experiment-comment">
  <%= link_to "New comment", new_experiment_comment_path(@experiment) %>
 <%= render partial: 'comments/show' %>
</div>
