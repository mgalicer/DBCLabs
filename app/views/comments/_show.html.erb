<% if @comments %>
  <% @comments.each_with_index do |comment, i| %>
    <% if i % 2 == 0 %>


    <div style="width:400px">
      <div class="card #9e9e9e grey">
        <div class="card-content white-text">
          <p><%= comment.content %></p>
          <p>by <%= comment.commenter.name %> | <%= comment.commenter.created_at.strftime("%F") %></p>
        </div>
      </div>
    </div>

    <% else %>

    <div style="width:400px">
      <div class="card #e64a19 deep-orange darken-2">
        <div class="card-content white-text">
          <p><%= comment.content %></p>
          <p>by <%= comment.commenter.name %> | <%= comment.commenter.created_at.strftime("%F") %></p>
        </div>
      </div>
    </div>

    <% end %>
  <% end %>
<% end %>

