
<div class="container">

  <% if current_user %>
  <div id="all-links">
    <ul>
      <li><%= link_to "All Proposals", proposals_path %></li>
      <li><%= link_to "All Experiments", root_path %></li>
    </ul>
  </div>
  <% end %>

  <h3>Proposal Overview:</h3>
  <label>Proposal Title:</label>
  <p><%= @proposal.title %></p>
  <label>Hypothesis:</label>
  <p><%= @proposal.hypothesis %></p>
  <label>Summary:</label>
  <p><%= @proposal.summary %></p>
    <div class="proposal-footer">
      <label>Proposal Created at:</label>
      <p><%= @proposal.created_at %></p>
      <label>Proposer:</label>
      <p><%= @proposal.proposer.name %></p>
    </div>

  <% if @proposal.experiments.length > 0 %>
    <h4>Current experiments based on this proposal:</h4>
    <% @proposal.experiments.each do |experiment| %>
      <%= link_to experiment.title, proposal_experiment_path(experiment.proposal, experiment) %><br>
    <% end %>
  <% end %><br><br>

  <div id="new-experiment-link">
    <%= link_to "Create New Experiment", new_proposal_experiment_path(@proposal) %>
  </div>

  <%= link_to "New comment", new_proposal_comment_path(@proposal) %>

    <%= render partial: 'comments/show' %>
</div>
