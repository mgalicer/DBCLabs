<div class = "all-forms">
<h4>Sign Up Here!</h4>
<br>
  <%= form_for :user, url: users_path do |f| %>
    <div class = "input-field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class = "input-field">
      <%=f.label :email, placeholder: "Email" %>
      <%= f.text_field :email %>
    </div>
    <div class = "input-field">
      <%= f.label :password, placeholder: "Name" %>
      <%= f.password_field :password %>
    </div>
    <%= f.label :type %><br>
    <%= f.select(:user_type, @user_options, {}, {class: "browser-default"}) %><br>
    <%= f.submit "Register"%>
  <% end %>
  <div class = "errors">
    <% if @user %>
      <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    <% end %>
  </div>
</div>
